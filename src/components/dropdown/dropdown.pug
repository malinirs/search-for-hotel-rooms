mixin selectDropdown(name, labelName, dropdownTitle, items)
  .form-field
    label.form-field__label #{labelName}
    .form-field__control.dropdown(data-dropdown-type= name)
      .dropdown__header
        span.dropdown__title #{dropdownTitle}
        img(src=require('@/assets/images/expand_more3.jpg'), alt="Стрелка вниз").dropdown__arrow
      .dropdown__menu
        .dropdown__menu-description
          each item in items
            .dropdown__item
              .dropdown__item-name #{item}
              .dropdown__item-control
                button(type="button").dropdown__button.dropdown__button--minus -
                span.dropdown__item-value 0
                button(type="button").dropdown__button.dropdown__button--plus +
        .dropdown__footer
          button(type="button").dropdown__footer--clear Очистить
          button(type="button").dropdown__footer--apply Применить
